{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "amd",
        "moduleResolution": "node",
        "outFile": "dist/scripts/index.js",
        "declaration": true
    },
    "include": [
        "src",
        "test"
    ]
}